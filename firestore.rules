rules_version = '2';
service cloud.firestore {
  match /databases/{db}/documents {
    function isSignedIn() {
      return request.auth != null && request.auth.uid != null;
    }

    function inGame(gameId) {
      return (
        isSignedIn() &&
        exists(/databases/$(db)/documents/games/$(gameId)/players/$(request.auth.uid))
      );
    }

    match /games/{gameId} {
      allow read: if inGame(gameId);
      allow write: if false;

      match /players/{playerId} {
        allow read: if inGame(gameId);
        allow write: if false;
      }

      match /hands/{playerId} {
        allow read: if inGame(gameId) && request.auth.uid == playerId;
        allow write: if false;
      }

      match /board/{docId} {
        allow read: if inGame(gameId);
        allow write: if false;
      }

      match /config/{docId} {
        allow read: if inGame(gameId) && !('devDeckOrder' in resource.data);
        allow write: if false;
      }

      match /bank/{docId} {
        allow read: if inGame(gameId);
        allow write: if false;
      }

      match /trade/{docId} {
        allow read: if inGame(gameId);
        allow write: if false;
      }

      match /logs/{logId} {
        allow read: if inGame(gameId);
        allow create: if inGame(gameId);
        allow update, delete: if false;
      }

      match /meta/{docId} {
        allow read: if inGame(gameId);
        allow write: if false;
      }
    }
  }
}
